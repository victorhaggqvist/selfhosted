  <div class="container mainlane">

    <div class="text-center">
      <h1>Selfhosted</h1>
      <p class="lead">A list of applications that are created to work as a replacement of hosted consumer-type software</p>
    </div>

    {% for s in sections %}
    <section class="app-section">
    <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">{{ s.name }}</h3>
        </div>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>URL</th>
            <th>OSS</th>
            <th>$</th>
          </tr>
          </thead>
          <tbody>

          {% for a in s.apps | sortbyfield('name') %}
            <tr>
              <td><img src="https://www.google.com/s2/u/0/favicons?domain={{ a.url }}" alt="{{ a.name }} icon"><a href="{{ a.url }}">{{ a.name }}</a></td>
              <td>{{ a.desc }}</td>
              <td><a href="{{ a.url }}">{{ a.url }}</a></td>

              {% if a.oss == 'C' %}
                <td><abbr title="Custom"><i class="icon-users" aria-label="Custom license"></i></abbr></td>
              {% elseif not a.oss %}
                <td><abbr title="No license available"><i class="icon-lock" aria-label="No license available"></i></abbr></td>
              {% else %}
                <td>{{ a.oss }}</td>
              {% endif %}

              <td>
                {% if a.cost == 0 %}
                  <abbr title="Free"><i class="icon-leaf"></i></abbr>
                {% elseif a.cost == 1 %}
                  <abbr title="Freemium"><i class="icon-key" aria-label="Freemium"></i></abbr>
                {% elseif a.cost == 2 %}
                  <abbr title="Paid"><i class="icon-money" aria-label="Paid"></i></abbr>
                {% else %}
                  <abbr title="Paid"><i class="icon-money" aria-label="Paid"></i></abbr>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
        </div>
    </section>

    {% endfor %}

    {% include 'definition.twig' %}

    <footer>
      <a name="about"></a><a name="contribute"></a>
      <hr>
      <div class="row">
        <div class="col-md-12 text-center">
          See an issue or want to add to this website? Send a patch on <a href="https://github.com/victorhaggqvist/selfhosted">GitHub</a>.
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-12 text-center">Made by <a href="https://victorhaggqvist.com/">Victor HÃ¤ggqvist</a></div>
      </div>
    </footer>

